<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YouTubeApiProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YouTubeApiProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://bootswatch.com/5/slate/bootstrap.min.css" />

    <style>
        /* Ensure navbar is fixed at the top */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        /* Add margin-top to avoid content being hidden under navbar */
        .content-container {
            margin-top: 80px;
        }

        /* Improve styling for navbar links */
        .navbar .nav-link {
            font-weight: bold;
        }

        /* Footer styling */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: 20px; /* Space between content and footer */
            text-align: center;
        }

        /* Pagination margin */
        .pagination-container {
            margin-bottom: 50px; /* Add spacing to avoid overlap */
        }
    </style>
</head>
<body>
    <header>
        <!-- Fixed Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Adam Web API</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="YouTube" asp-action="Index">Search Video</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content with Margin to Avoid Overlapping Navbar -->
    <div class="container content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
