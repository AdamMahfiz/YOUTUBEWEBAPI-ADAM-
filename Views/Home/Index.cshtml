@model List<YouTubeApiProject.Models.YouTubeVideoModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center py-5">
    <h1 class="display-4">🔥 Trending YouTube Videos</h1>
    <p class="lead text-muted">Stay updated with the latest trending videos on YouTube.</p>

    <!-- Trending Videos Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var video in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow">
                        <img src="@video.ThumbnailUrl" alt="@video.Title" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@video.Title</h5>
                            <a href="@video.VideoUrl" target="_blank" class="btn btn-primary w-100">
                                 Watch
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                No trending videos found. Please try again later.
            </div>
        }
    </div>
</div>